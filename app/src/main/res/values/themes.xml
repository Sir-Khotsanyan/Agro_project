<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agro_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sheen_green</item>
        <item name="colorPrimaryVariant">@color/transparency</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- Customize the colors here -->
        <item name="android:headerBackground">@color/sheen_green</item>
    </style>

    <style name="CustomButtonBarButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/sheen_green</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButton</item>
    </style>

</resources>